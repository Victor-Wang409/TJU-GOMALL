
{{ template "header" .}}
<div class="row justify-content-center">
    <div class="col-3">
        <form method="post" action="/auth/register">
            <div class="mb-3">
                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="mb-3">
                <label for="password_comfirm" class="form-label">Password Comfirm <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="password_comfirm" name="password_comfirm">
            </div>
            <div class="mb-3">
                Already have an account, click here to <a href="/sign-in">Sign in</a>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>
{{ template "footer"}}